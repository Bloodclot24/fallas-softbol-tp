package rules;
import sintomas.*;

rule "Fastball"
no-loop true
    when
        sintoma : Diagnostico(distPeso == "Medio", pies == "NoAlineado", soltadoPelota == "Medio", movMunieca == "Medio", traza == "Recta", velocidad == "Alta" )
    then
        sintoma.setLanzamiento("Fastball");
        System.out.println("Lanzamiento: " + sintoma.getLanzamiento());
        
        
end
 
